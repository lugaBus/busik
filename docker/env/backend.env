# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/lugabus?schema=public

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
# In production, set these to your actual frontend and admin URLs
# Example: FRONTEND_URL=https://lugabus.cv
# Example: ADMIN_URL=https://admin.lugabus.cv
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# API
# In production: API_URL=https://api.lugabus.cv/api
# In production: BACKEND_URL=https://api.lugabus.cv/api
API_URL=http://localhost:3001
BACKEND_URL=http://localhost:3001

# Rate Limiting
# Default: 100 requests per 60 seconds (1 minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
# Auth endpoints: 5 requests per 15 minutes (stricter for login/register)
THROTTLE_AUTH_TTL=900000
THROTTLE_AUTH_LIMIT=5
